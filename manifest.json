{
    "name": "beyondImperial",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": ["*://www.dndbeyond.com/*characters/*"],
            "js": ["src/utils.js", "src/characterSheet.js"]
        },
        {
            "run_at": "document_end",
            "matches": ["*://www.dndbeyond.com/monsters/*"],
            "js": ["src/utils.js", "src/monsterStats.js"]
        }
    ],
    "browser_action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": "BM_Logo.png"
    }
}