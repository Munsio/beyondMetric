{
  "name": "beyondmetric",
  "version": "1.0.0",
  "description": "A chrome plugin that converts the imperial measurements from dndbeyond in metric using Matthew Roy's rules",
  "main": "index.js",
  "dependencies": {
    "jsmin": "^1.0.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/chrome": "0.0.112"
  },
  "scripts": {
    "minify": "jsmin -o .\\scripts\\Popup.js .\\scripts\\Popup.js & jsmin -o .\\scripts\\Utils.js .\\scripts\\Utils.js & jsmin -o .\\scripts\\MonsterStats.js .\\scripts\\MonsterStats.js & jsmin -o .\\scripts\\CharacterSheet.js .\\scripts\\CharacterSheet.js",
    "build": "tsc & npm run minify",
    "dev": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmarian/beyondMetric.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bmarian/beyondMetric/issues"
  },
  "homepage": "https://github.com/bmarian/beyondMetric#readme"
}
